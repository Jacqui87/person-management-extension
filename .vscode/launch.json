{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch ASP.NET Core Backend",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/PersonManagementExtension.Web/bin/Debug/net8.0/PersonManagementExtension.Web.dll",
      "args": [],
      "cwd": "${workspaceFolder}/PersonManagementExtension.Web",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/PersonManagementExtension.Web/Views"
      }
    }
  ]
}
